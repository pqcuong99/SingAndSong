<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frgmain">
</FrameLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/footer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center"
        android:layout_height="56dp"
        android:background="#fff"
        android:weightSum="6">
        <ImageView
            android:scaleType="fitXY"
            android:onClick="play"
            android:src="@drawable/simple"
            android:id="@+id/imagesong"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:onClick="play"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/lnquaylai">
            <TextView
                android:id="@+id/msname"
                android:layout_marginLeft="10dp"
                android:text="Simple Love"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/cs"
                android:layout_marginLeft="10dp"
                android:text="Obito"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageButton
            android:onClick="presong"
            android:layout_weight="1"
            android:id="@+id/luibai"
            android:background="@null"
            android:src="@drawable/back_64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="1"
            android:onClick="plays"
            android:id="@+id/playbai"
            android:background="@null"
            android:src="@drawable/pause_64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="1"
            android:onClick="nextsong"
            android:id="@+id/nextbai"
            android:background="@null"
            android:src="@drawable/next_64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>